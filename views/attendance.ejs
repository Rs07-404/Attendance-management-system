<%- include('partials/header.ejs') %>

<div class="space"></div>
<div class="content">
    <div class="title">Take Attendance</div>
    <form class="attend_form" action="/submit_attendance/<%= id %>" method="POST">
        <div class="status">
            <div><input type="radio" name="status" value="P">Present</div>
            <div><input type="radio" name="status" value="A">Absent</div>
        </div>
        <div class="checks">
        <% for(let i = 1; i <= count; i ++){ %>
            <div class="check">
                <input class="checkbox" type="checkbox" name="<%= i %>">
                <span class="checkmark"></span>
                <label for="<%= i %>"><%= i %></label>
            </div>
        <% }; %>
        </div>
        <div><input class="submit" type="submit" value="Submit"></div>
    
    </form>
</div>

<%- include('partials/footer.ejs') %>